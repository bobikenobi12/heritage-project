<% if (.success_msg) { %>
  <div class="alert alert-dismissible fade show alert-success" role="alert">
    <button
      class="btn-close"
      type="button"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
    <strong><%= messages.success_msg %> </strong>
  </div>
  <% } %>
<div class="container">
  <div class="row">
    <div class="col-lg-6 mx-auto mt-4">
      <div class="card shadow">
        <div class="card-header bg-primary">
          <h3 class="text-light">Add friend</h3>
        </div>
        <div class="card-body p-4">
          <form
            action="/users/user/friends/add"
            method="post"
            id="add-form"
          >
            <div class="mb-3">
              <label for="friend_email">Email</label>
              <input
                type="email"
                name="friend_email"
                class="form-control form-control-lg"
                placeholder="Enter email"
                required
              />    
              </div>
              <div class="mb-3 d-grid">
                  <button type="submit" class="btn btn-primary btn-lg">Add Friend</button>
              </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script
  src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/js/bootstrap.bundle.min.js"
