include('../partials/body-start-partial') %>
<ul class="alert">
  <% if(typeof errors != 'undefined') {%> <% errors.forEach(error => { %>
  <li><%= error.message %></li>
  <% }); %> <% } %>
</ul>
<div class="container">
  <div class="row">
    <div class="col-lg-6 mx-auto mt-4">
      <div class="card shadow">
        <div class="card-header bg-success">
          <h3 class="text-light">Edit Upload <%= results[0].title %></h3>
        </div>
        <div class="card-body p-4">
          <form
            action="/users/images/edit/:<%= results[0].id %>"
            method="post"
            id="add-form"
            enctype="multipart/form-data"
          >
            <div class="mb-3">
              <label for="title">Title</label>
              <input
                type="text"
                name="title"
                class="form-control form-control-lg"
                placeholder="Enter title"
                value="<%= results[0].title %>"
              />
            </div>
            <div class="mb-3">
                <label for="place">Place</label>
                <input
                  type="text"
                  name="place"
                  class="form-control form-control-lg"
                  placeholder="Enter place"
                  value="<%= results[0].place %>"
                />
              </div>
              <div class="mb-3">
                <label for="date">Date</label>
                <input
                  type="date"
                  name="date"
                  class="form-control form-control-lg"
                  placeholder="MM/DD/YYYY"
                  value="<%= results[0].date %>"
                />
              </div>
              <div class="mb-3">
                <label for="image" class="form-label">Select Image</label>
                <input
                  type="file"
                  name="image"
                  class="form-control form-control-lg"
                />
                <img src="/uploads/<%= results[0].image %>" width="100" class="img-thumbnail mt-1">
              </div>
              <input type="hidden" name="old_image" value="<%= results[0].image %>">
              <div class="mb-3 d-grid">
                  <input type="submit" name="submit" value="Update Upload" class="btn btn-success btn-lg">
              </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script
  src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/js/bootstrap.bundle.min.js"
